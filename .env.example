# Meta MCP Server Configuration

# Required: Meta App Credentials
META_APP_ID=your_facebook_app_id
META_APP_SECRET=your_facebook_app_secret

# Platform-specific Access Tokens (at least one required)
# Facebook Messenger
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token

# Instagram (requires Instagram Business Account connected to Facebook Page)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token

# WhatsApp Business Cloud API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Optional Configuration
META_API_VERSION=v21.0
LOG_LEVEL=INFO

# Demo Mode (set to true to use mock adapters without real credentials)
DEMO_MODE=false
